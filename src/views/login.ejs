<!DOCTYPE html>
<html>

<head>
  <title>Authorization Server</title>
  <!-- Needed for mobile sites to work -->
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- Style sheets -->
  <link rel="stylesheet" type="text/css" href="stylesheets/pure-min.css">
  <link rel="stylesheet" type="text/css" href="stylesheets/base.css">
  <link rel="stylesheet" type="text/css" href="stylesheets/sign-in-modules.css">
</head>

<body>

  <!-- HTML login screen form -->
  <form action="/login" method="post" class="pure-form pure-form-stacked">
    <fieldset>
      <!-- Upper box with Title, username, and password -->
      <div class="upper-box">
        <!-- Title -->
        <div>
          <h1 class="title-padding">Log in to X</h1>
        </div>
        <div class="pure-control-group">
          <!-- Username label and input -->
          <label class="labels" for="name">Username:</label>

          <div class="input-fields">
            <input class="pure-input-1 input-fields" id="name" type="text" placeholder="Hint: test" name="username" />
          </div>
        </div>
        <div class="pure-control-group">
          <!-- Password label and input -->
          <label class="labels" for="password">Password:</label>

          <div class="input-fields">
            <input class="pure-input-1 input-fields" id="password" type="password" placeholder="Hint: test" name="password" />
          </div>
        </div>
      </div>
      <!-- Bottom box with Sign in -->
      <div class="bottom-box">
        <div class="pure-controls sign-in-button">
          <button type="submit" value="Submit" class="pure-button pure-button-primary">Sign in</button>
        </div>
      </div>
    </fieldset>
  </form>

</body>

</html>